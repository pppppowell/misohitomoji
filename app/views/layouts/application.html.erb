<!DOCTYPE html>
<html>
  <head>
    <title>みそひともじ</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

 <body>
   <header>
     <div class="header-logo">
       <% if @current_user %>
         <%= link_to("みそひともじ", "/posts/index") %>
       <% else %>
         <%= link_to("みそひともじ", "/") %>
       <% end %>
     </div>
     <ul class="header-menus">
       <% if @current_user %>
         <li>
           <%= link_to("見る", "/posts/index") %>
         </li>
         <li>
           <%= link_to("ここで一句", "/posts/new") %>
         </li>
         <li>
           <%= link_to("歌人名簿", "/users/index") %>
         </li>
         <li>
           <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
         </li>
         <li>
           <%= link_to("ログアウト", "/logout", {method: "post"})%>
         </li>
       <% else %>
         <li>
           <%= link_to("詳細", "/about") %>
         </li>
         <li>
           <%= link_to("新規登録", "/signup") %>
         </li>
         <li>
           <%= link_to("ログイン", "/login") %>
         </li>
       <% end %>
     </ul>
   </header>

      <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
    <% end %>

    <%= yield %>
  </body>
</html>
